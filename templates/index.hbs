        <li class="landing-way-to-help">
          <svg class="way-to-help-icon">
            <use xlink:href="#money"></use>
          </svg>
          <button class="way-to-help-button solid-button">Donate</button>
        </li>
        <li class="landing-way-to-help">
          <svg class="way-to-help-icon">
            <use xlink:href="#megaphone"></use>
          </svg>
          <button class="way-to-help-button solid-button">Help</button>
        </li>
      </ul>
    </div>
  </section>

</main>

